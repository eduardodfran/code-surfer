{
  "name": "code-surfer",
  "displayName": "Code Surfer",
  "description": "A friendly peer reviewer that predicts potential issues in your code before they break things",
  "version": "0.0.1",
  "publisher": "code-surfer",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/code-surfer.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "code analysis",
    "static analysis",
    "code quality",
    "linter",
    "code review"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-surfer.analyzeFile",
        "title": "Analyze Current File",
        "category": "Code Surfer"
      },
      {
        "command": "code-surfer.showReport",
        "title": "Show Code Surfer Report",
        "category": "Code Surfer"
      },
      {
        "command": "code-surfer.refreshAnalysis",
        "title": "Refresh Analysis",
        "category": "Code Surfer"
      },
      {
        "command": "code-surfer.openSettings",
        "title": "Open Code Surfer Settings",
        "category": "Code Surfer"
      },
      {
        "command": "code-surfer.resetRuleConfig",
        "title": "Reset Rule Configuration",
        "category": "Code Surfer"
      },
      {
        "command": "code-surfer.testPython",
        "title": "Test Python Analysis (Debug)",
        "category": "Code Surfer"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "codeSurferReport",
          "name": "Code Surfer Report"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codeSurferReport",
        "contents": "üèÑ‚Äç‚ôÇÔ∏è Welcome to Code Surfer!\n\nOpen a JavaScript, TypeScript, or Python file to see analysis results.\n\n[Analyze Current File](command:code-surfer.analyzeFile)\n[Open Settings](command:code-surfer.openSettings)"
      }
    ],
    "configuration": {
      "title": "Code Surfer",
      "properties": {
        "codeSurfer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Code Surfer analysis"
        },
        "codeSurfer.analyzeOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze files when saved"
        },
        "codeSurfer.analyzeOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze files when opened"
        },
        "codeSurfer.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline hints and decorations in the editor"
        },
        "codeSurfer.rules.javascript": {
          "type": "object",
          "default": {
            "unused-variable": {
              "enabled": true,
              "severity": "warning"
            },
            "async-without-await": {
              "enabled": true,
              "severity": "warning"
            },
            "long-function": {
              "enabled": true,
              "severity": "info",
              "maxLines": 50
            },
            "eslint-suggestions": {
              "enabled": true,
              "severity": "info"
            }
          },
          "description": "Configuration for JavaScript/TypeScript rules"
        },
        "codeSurfer.rules.python": {
          "type": "object",
          "default": {
            "missing-docstring": {
              "enabled": true,
              "severity": "info"
            },
            "unused-variable": {
              "enabled": true,
              "severity": "info"
            },
            "bare-except": {
              "enabled": true,
              "severity": "warning"
            },
            "mutable-default-argument": {
              "enabled": true,
              "severity": "warning"
            },
            "comparison-with-singleton": {
              "enabled": true,
              "severity": "info"
            },
            "old-string-formatting": {
              "enabled": true,
              "severity": "info"
            },
            "long-function": {
              "enabled": true,
              "severity": "warning",
              "maxLines": 50
            },
            "high-complexity": {
              "enabled": true,
              "severity": "warning",
              "maxComplexity": 10
            }
          },
          "description": "Configuration for Python rules"
        },
        "codeSurfer.severity.info": {
          "type": "boolean",
          "default": true,
          "description": "Show informational issues"
        },
        "codeSurfer.severity.warning": {
          "type": "boolean",
          "default": true,
          "description": "Show warning issues"
        },
        "codeSurfer.severity.error": {
          "type": "boolean",
          "default": true,
          "description": "Show error issues"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/babel-traverse": "^6.25.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@typescript-eslint/utils": "^8.44.0",
    "child_process": "^1.0.2"
  }
}
